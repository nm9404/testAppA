<h1 align = "center">
  Mostrando todos los posts!
</h1>


<% @posts.each do |post| %>
    <div class = "row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class ="well well-lg">
                <div class ="titulo-post">
                    <%= link_to post.titulo, post_path(post) %>
                </div>
                <div class = "cuerpo-post">
                    <%= truncate(post.descripcion, length: 100) %>
                </div>
                <div class = "acciones-post">
                <%= link_to "Editar este articulo", edit_post_path(post.id), class: "btn btn-xs btn-primary" %>
                <%= link_to "Eliminar articulo", post_path(post), method: :delete, 
                                                        data: {confirm: "Seguro?"}, 
                                                        class: "btn btn-xs btn-danger" %>
                </div>
            </div>
        </div>
    </div>
<% end %>