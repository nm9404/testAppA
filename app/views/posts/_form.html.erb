<% if @post.errors.any? %>
<% @post.errors.full_messages.each do |mensaje| %>
  <ul>
    <li><%= mensaje %></li> 
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for @post do |f| %>
      <div class="form_group">
        <div class="control-label col-sm-2">
          <%= f.label :titulo %>
        </div>
          <div class = "col-sm-10">
            <%= f.text_field :titulo, class: "form-control", placeholder: "Titulo post", autofocus: true %>
          </div>
        </div>
    <div class="form_group">
        <div class="control-label col-sm-2">
          <%= f.label :descripcion %>
        </div>
          <div class = "col-sm-10">
            <%= f.text_area :descripcion, rows: 10, class: "form-control", placeholder: "Ingresa descripcion de post", autofocus: true %>
          </div>
        </div>
    </div>
    <div class="form_group">
      <div class="col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>

    <%= link_to "Ir a indice de posts", posts_path %>
    
  </div>
</div>

