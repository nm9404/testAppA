<%= render "shared/errors", obj: @post %>

<div class="row">
  <%= form_for @post do |f| %>
  <div class="col-xs-12">
      <div class="form_group">
        <div class="control-label col-sm-2">
          <%= f.label :titulo %>
        </div>
          <div class = "col-sm-10">
            <%= f.text_field :titulo, class: "form-control", placeholder: "Titulo post", autofocus: true %>
          </div>
        </div>
    <div class="form_group">
        <div class="control-label col-sm-2">
          <%= f.label :descripcion %>
        </div>
          <div class = "col-sm-10">
            <%= f.text_area :descripcion, rows: 10, class: "form-control", placeholder: "Ingresa descripcion de post", autofocus: true %>
          </div>
        </div>
    </div>
    <div class="col-sm-10">
      <div class="form-group">
            <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>
    <% end %>

    <%= link_to "Ir a indice de posts", posts_path %>    
</div>


